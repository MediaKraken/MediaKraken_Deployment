# from pyinstaller3 directory
python pyinstaller.py c:\gitcheckout\Meta-Man.Theater\main.py
# "real" release F is one file and w is no window in windows/mac
python pyinstaller.py -F -w c:\gitcheckout\Meta-Man.Theater\main.py

python ez_setup.py
pip install Kivy-1.9.0+sdl2-cp27-none-win32.whl

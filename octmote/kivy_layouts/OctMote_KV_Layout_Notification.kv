#:kivy 1.8.0
<OctMoteNotificationScreen>:
    BoxLayout:
        padding: 10
        spacing: 10
        orientation: 'vertical'
        BoxLayout:
            Label:
                id: message_type
                text: 'Error!'
            TextInput:
                id: message_text
                readonly: True
                multiline: True
            Image:
                source: './images/notification.png'
                y: self.parent.y + self.parent.height - 50
                x: self.parent.x
                size: 50, 50
                allow_stretch: True
        BoxLayout:
            Button:
                id: ok_button
                text: 'Ok'

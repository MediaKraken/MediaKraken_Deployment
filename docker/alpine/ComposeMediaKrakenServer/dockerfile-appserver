# Download base image
FROM mediakraken/mkbase38py3

LABEL AUTHOR="Quinn D Granfor, spootdev@gmail.com"
LABEL Description="This image holds the main server app"

ARG ALPMIRROR=dl-cdn.alpinelinux.org

# copy PIP requirements
ADD requirements.txt /mediakraken
WORKDIR /mediakraken

RUN sed -i "s/dl-cdn.alpinelinux.org/${ALPMIRROR}/" /etc/apk/repositories \
  && apk add --update \
  alpine-sdk \
  python3-dev \
  && pip3 install -r requirements.txt \
  && apk add \
  libressl-dev \
  libressl \
  cifs-utils \
  curl-dev \
  nfs-utils \
  libffi-dev \
  openldap-dev \
  jpeg-dev \
  libxml2-dev \
  libxslt-dev \
  linux-headers \
  musl-dev \
  net-snmp \
  net-snmp-dev \
  openldap-dev \
  portaudio-dev \
  py3-psycopg2 \
  py3-psutil \
  py3-babel \
  py3-service_identity \
  py3-requests \
  py3-uritemplate \
  py3-httplib2 \
  py3-setuptools \
  py3-curl \
  py3-natsort \
  openrc \
  && apk del \
  alpine-sdk \
  libxml2-dev \
  libxslt-dev \
  linux-headers \
  libressl-dev \
  musl-dev \
  net-snmp-dev \
  && rm -rf /var/cache/apk/* \
  && rm requirements.txt \
  && rc-update add netmount \
  && rc-update add rpcbind

ADD wait-for-it-ash.sh /mediakraken
ADD np_inline-0.3 /mediakraken/np_inline
RUN cd /mediakraken/np_inline \
  && python3 setup.py install \
  && cd .. \
  && rm -R ./np_inline
# Copy the source files for the app
ADD src /mediakraken

EXPOSE 8903

CMD ["/bin/ash"]

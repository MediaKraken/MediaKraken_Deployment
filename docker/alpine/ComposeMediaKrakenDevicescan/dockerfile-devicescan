# Download base image
FROM alpine:3.4 

MAINTAINER Quinn D Granfor, spootdev@gmail.com

LABEL www.mediakraken.org.version="dev-0.2.0"
LABEL Description="This image scans for new hardware devices"

RUN mkdir /mediakraken \
  && mkdir /mediakraken/build
WORKDIR /mediakraken

# Update repository and install packages
RUN apk add --update \
  python \
  alpine-sdk \
  && tar -xvf libhdhomerun* \
  && cd libhdhomerun \
  && make \
  && make install \
  && apk del alpine-sdk \
  && cd .. \
  && rm libhdhomerun* \

# Copy the source files for the app
ADD src /mediakraken
ADD PyHdHomeRun /mediakraken/build

RUN cd build \
  && python setup.py \
  && cd .. \
  && rm -R build

CMD ["/bin/ash"]




# Download base image
FROM mediakraken/mkbase37

LABEL AUTHOR="Quinn D Granfor, spootdev@gmail.com"
LABEL Description="This image holds the hardware app"

# copy PIP requirements
ADD requirements.txt /mediakraken
WORKDIR /mediakraken

RUN apk add --update \
  gcc \
  linux-headers \
  python-dev \
  && pip install -r requirements.txt \
  && apk del \
  py-pip \
  && rm -rf /var/cache/apk/* \
  && rm requirements.txt \
  && apk del \
  gcc \
  linux-headers \
  python-dev

ADD wait-for-it-ash.sh /mediakraken
# Copy the source files for the app
ADD src /mediakraken

CMD ["/bin/ash"]

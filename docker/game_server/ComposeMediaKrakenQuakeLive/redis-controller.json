{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"redis",
      "labels":{
         "name":"redis"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"redis"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"redis"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"redis",
                  "image":"redis",
                  "ports":[
                     {
                        "containerPort":6379,
                        "protocol":"TCP"
                     }
                  ],
                  "volumeMounts":[
                     {
                        "name": "redis-persistent-storage",
                        "mountPath": "/data"
                     }
                  ]
               }
            ],
            "volumes":[
               {
                  "name":"redis-persistent-storage",
                  "gcePersistentDisk":{
                     "pdName":"redis-disk",
                     "fsType":"ext4"
                  }
               }
            ]
         }
      }
   }
}
